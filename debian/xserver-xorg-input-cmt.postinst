#!/bin/sh
set -e

CB_MODEL="$(dmidecode | grep "Product Name" | awk '{print tolower($3)}')"

# Install model specific config
case "$1" in
	configure)
                FILE=`ls -1 /usr/share/xf86-input-cmt/*-touchpad-cmt-$CB_MODEL.conf`
		if [ -r "$FILE" ]; then
			rm -f /usr/share//usr/share/X11/xorg.conf.d/*-touchpad-cmt-*
			cp -f "$FILE" /usr/share/X11/xorg.conf.d/
		fi
	;;
esac
